<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plain_background_inv">

    <!-- Header -->

    <!-- Subtitle -->

    <!-- Illustration -->

    <!-- Action Buttons -->

    <!-- TextView -->

    <ImageView
        android:id="@+id/illustration_image"
        android:layout_width="368dp"
        android:layout_height="275dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/img" />

    <ImageView
        android:id="@+id/kk"
        android:layout_width="383dp"
        android:layout_height="223dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/tree" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="338dp"
        android:layout_height="75dp"
        android:layout_below="@id/illustration_image"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/another_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:text="Live translation"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="283dp"
        android:layout_height="79dp"
        android:layout_below="@id/illustration_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-22dp"
        android:background="#00FFCE3B"
        android:text="A Sign Language Detector App by SYNTECH"
        android:textAlignment="center"
        android:textColor="@color/bottom_sheet_text_color"
        android:textSize="17sp"
        android:textStyle="bold" />

    <!-- Footer -->
</RelativeLayout>
